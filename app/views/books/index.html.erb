<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<body>

  <table class="table">

   <tr>
      <th class="header1">Title</th>
      <th class="header2">Body</th>
   </tr>

<% @books.each do |book| %> 
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %>  <%= link_to "Show", "/books/#{book.id}" %>
      <%= link_to "Edit"," /books/#{book.id}/edit"%>
      <%= link_to "Destroy", "books/#{book.id}", method: :delete %>
      </td>
    </tr>

<% end %>
</table>

  <h2>New book</h2>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>"errors prohibited this book from being saved:"
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
</body>